# Firebase設定
# 開発時参照先: https://console.firebase.google.com/project/oss-token-platform-development/overview?hl=ja
# このファイルをコピーして.envファイルを作成し、実際の値を設定してください

NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your-measurement-id

# Firebase Admin SDK設定
# Firebase Console → プロジェクト設定 → サービスアカウント → 新しい秘密鍵の生成
# ダウンロードしたJSONファイルから以下の値を取得してください
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key-here\n-----END PRIVATE KEY-----"

# GitHub App設定

# GitHub App設定（フロントエンド用）
NEXT_PUBLIC_GITHUB_APP_NAME=your-github-app-name

# GitHub Developer Settings (https://github.com/settings/apps) から取得してください
GITHUB_APP_ID=your-github-app-id
GITHUB_APP_NAME=your-github-app-name
GITHUB_APP_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nyour-private-key-here\n-----END RSA PRIVATE KEY-----"
GITHUB_APP_CLIENT_ID=your-github-app-client-id
GITHUB_APP_CLIENT_SECRET=your-github-app-client-secret
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# Xumm API設定
# Xaman Developer Portal (https://apps.xaman.dev/) から取得してください
XUMM_API_KEY=your-xumm-api-key
XUMM_API_SECRET=your-xumm-api-secret

# XRPL設定
# ネットワーク設定（testnet または mainnet）
XRPL_NETWORK=testnet

# Issuer Wallets（トークン発行用ウォレット）
# 複数のウォレットを設定可能（_1, _2, _3...）
XRPL_ISSUER_1_ADDRESS=rXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
XRPL_ISSUER_1_SECRET=sXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
XRPL_ISSUER_1_ACTIVE=true

# Treasury Wallets（寄付受取用ウォレット）
# 複数のウォレットを設定可能（_1, _2, _3...）
XRPL_TREASURY_1_ADDRESS=rYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYY
XRPL_TREASURY_1_SECRET=sYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYY
XRPL_TREASURY_1_ACTIVE=true

# トランザクション検証用ソルト
# 寄付トランザクションの検証ハッシュ生成に使用される秘密の文字列
# 本番環境では必ず強力でランダムな値に変更してください
TX_VERIFICATION_HASH_SALT=your-secret-salt-here
