{
  "name": "oss-token-platform",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "format": "prettier --write .",
    "lint": "bun run lint:eslint && bun run lint:prettier && bun run lint:stylelint",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "lint:stylelint": "stylelint \"**/*.{css,scss}\"",
    "test": "bun test --timeout=30000",
    "e2e-test": "playwright test",
    "e2e-test:ui": "playwright test --ui",
    "e2e-test:headed": "playwright test --headed",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "db:reset:dev": "bun firebase use default && bun firebase firestore:delete --all-collections --force",
    "auth:reset:dev": "bun firebase use default && bun scripts/reset-auth.ts",
    "reset:dev": "bun run db:reset:dev && bun run auth:reset:dev",
    "reset:dev:safe": "bun scripts/reset-confirm.ts",
    "setup:pricing": "bun scripts/setup-pricing-data.ts"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/config-validator": "^19.8.1",
    "@playwright/test": "^1.53.0",
    "@tailwindcss/postcss": "^4.1.10",
    "@types/bun": "latest",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "firebase-tools": "^14.6.0",
    "husky": "^9.1.7",
    "playwright": "^1.53.0",
    "postcss": "^8.5.5",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "stylelint": "^16.20.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^38.0.0",
    "tailwindcss": "^4.1.10"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.1.1",
    "@octokit/auth-app": "^8.0.1",
    "@octokit/rest": "^22.0.0",
    "ajv": "^8.17.1",
    "firebase": "^11.9.1",
    "firebase-admin": "^13.4.0",
    "jsonwebtoken": "^9.0.2",
    "next": "^15.3.3",
    "punycode": "^2.3.1",
    "react-hook-form": "^7.57.0",
    "react-hot-toast": "^2.5.2",
    "uri-js": "^4.4.1",
    "xrpl": "^4.3.0",
    "xumm": "^1.8.0",
    "zod": "^3.25.63"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  }
}
